#!/usr/bin/env python
'''
Usage: 
    jekyllplus (--version|--help)
    jekyllplus [--host=<host>] [--port=<port>]

Options:
    --host=<host>               Bind address [default: 127.0.0.1]
    --port=<port>               Bind port [default: 8888]

'''
import docopt

import sys
import os

from jekyllplus import __version__
from jekyllplus.api import server


def parse_config(config_file):
    if not os.path.exists(config_file):
        return

if __name__ == '__main__':
    args = docopt.docopt(
        __doc__,
        version="version "+ __version__,
        help=True
    )

    options = {
        'host': args.get('--host'),
        'port': args.get('--port')
    }
    try:
        server.main(options)
    except KeyboardInterrupt:
        print 'Exiting'

